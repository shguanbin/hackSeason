{{!-- 首页文章循环 --}}
<div class="index-article-box container">
    <div class="article-left-box">

        {{!-- 所有文章 --}}
        {{#foreach posts}}
            {{!-- 第一篇 --}}
            {{#if @first}}
                <article class="post-card index-top-post">
                    {{!-- 文章图片 --}}
                    {{#if feature_image}}
                        <a class="post-card-image-link" href="{{url}}">
                            <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
                        </a>
                    {{else}}
                        <a class="post-card-image-link" href="{{url}}">
                            <div class="post-card-image" style="background-image: url(http://hackbinimg.luokangyuan.com/defaultBg.jpg)"></div>
                        </a>
                    {{/if}}

                    <div class="post-card-content">
                        <a class="post-card-content-link" href="{{url}}">
                            <header class="post-card-header">
                                <h2 class="post-card-title">{{title}}</h2>
                            </header>
                            <section class="post-card-excerpt color-gray">
                                <p>{{excerpt characters="90"}}</p>
                            </section>
                        </a>
                        {{!-- 作者信息 --}}
                        <footer class="post-card-meta">
                            <div class="top-post-author">
                                {{!-- 头像名字 --}}
                                {{#author}}
                                    <a href="{{url}}" class="top-post-user color-gray">
                                        {{#if profile_image}}
                                                <img class="top-post-head" src="{{profile_image}}" alt="{{name}}" />
                                        {{else}}
                                                <img class="top-post-head" src="http://hackbinimg.luokangyuan.com/default-head.png" alt="{{name}}" />
                                        {{/if}}
                                        <span>&nbsp;&nbsp;{{name}}</span>
                                    </a>
                                {{/author}}
                                <span class="reading-time"><b>{{date published_at timeago="true"}}</b></span>
                                {{!-- 标签 --}}
                                {{#if tags}}
                                    {{#foreach tags}}
                                    <span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                    <a href="{{url}}" target="_blank" class="aib-tag-item color-blue">{{name}}</a>
                                    {{/foreach}}
                                {{/if}}
                            </div>
                            <span class="reading-time read-time-title">
                                <b>
                                    {{!-- 评论 --}}
                                    <i class="icon-pinglun"></i>
                                    <span id = "sourceId::{{id}}" class = "cy_cmt_count" ></span>&nbsp;&nbsp;&nbsp;&nbsp;
                                    <script id="cy_cmt_num" src="https://changyan.sohu.com/upload/plugins/plugins.list.count.js?clientId=cytKgKylg">
                                    </script>
                                    {{!-- 阅读时间 --}}
                                    {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}
                                </b>
                            </span>

                        </footer>
                    </div>
                </article>

            {{!-- 非第一篇 --}}
            {{else}}
                <div class="articale-item-box color-black">
                    <div class="articale-item-bcontent">
                        <div class="aib-content">
                            {{!-- 文章图片 --}}
                            <div class="artical-img-box middle-center"
                                {{#if feature_image}}
                                    style="background-image: url({{feature_image}})"
                                {{else}}
                                    style="background-image: url(http://hackbinimg.luokangyuan.com/defaultBg.jpg)"
                                {{/if}}
                            >
                            </div>
                            <div class="article-txt-box">
                                {{!-- 文章标题 --}}
                                <a href="{{url}}" class="title">
                                    {{title}}
                                </a>
                                <div class="aticle-txt color-gray">
                                    {{!-- 文章内容 --}}
                                    <a href="{{url}}" class="txt color-gray">
                                        {{excerpt}}
                                    </a>
                                    <div class="aib-user color-gray">
                                        {{!-- 作者 --}}
                                        {{#author}}
                                            <i class="icon-pen"></i>
                                            &nbsp;<a href="{{url}}" class="user-name color-gray">{{name}}</a>
                                        {{/author}}
                                        <span>&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                                        {{!-- 时间 --}}
                                        <span><i class="icon-rili"></i>&nbsp;{{date published_at timeago="true"}}</span>
                                        {{!-- 文章标签 --}}
                                        <span class="aib-tages">
                                            {{#if tags}}
                                                {{#foreach tags}}
                                                    <span>&nbsp;·&nbsp;</span>
                                                    <a href="{{url}}" target="_blank" class="aib-tag-item color-blue">{{name}}</a>
                                                {{/foreach}}
                                            {{/if}}
                                        </span>

                                        <span class="read-time">
                                            {{!-- 评论 --}}
                                            <i class="icon-pinglun"></i>
                                            <span id = "sourceId::{{id}}" class = "cy_cmt_count" ></span>&nbsp;&nbsp;
                                            <script id="cy_cmt_num" src="https://changyan.sohu.com/upload/plugins/plugins.list.count.js?clientId=cytKgKylg">
                                            </script>
                                            {{!-- 阅读时间 --}}
                                            <i class="icon-time"></i>&nbsp;{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/foreach}}
        {{ pagination}}
    </div>
    <br>
    <div class="article-right-box">
        {{!-- 作者列表 --}}
        <div class="ar-item-box ar-author-list">
            <div class="ar-item-title">
                <span>作者们</span>
                <a href="https://jq.qq.com/?_wv=1027&k=5lq4CQD" target="_blank" class="become-user">加入他们</a>
            </div>
            <div  class="ar-users-list">
                {{#get "users" include="count.posts" order="count.posts desc"}}
                    {{#foreach users}}
                        <a href="/author/{{slug}}" class="ar-user-item">
                            {{#if profile_image}}
                                <img src="{{profile_image}}" alt="" class="head">
                            {{else}}
                                <img src="http://hackbinimg.luokangyuan.com/default-head.png" alt="" class="head">
                            {{/if}}
                            <div class="user-msg">
                                <div class="name-position">
                                    <span>{{name}}</span>
                                    <small>( {{count.posts}} 篇文章 ) </small>
                                </div>
                                <div class="bio color-gray" title="{{bio}}">
                                    {{#if bio}}
                                        {{bio}}
                                    {{else}}
                                        bug太多，懒得填写了
                                    {{/if}}
                                </div>
                            </div>
                        </a>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>

        {{!-- 云标签 --}}
        <div class="ar-item-box tags">
            <div class="ar-item-title">
                云标签<small class="color-gray">（文章数大于0）</small>
            </div>
            {{! Tag Cloud }}
            {{#get "tags" limit="all" include="count.posts" order="count.posts desc" }}
                {{#foreach tags}}
                    {{#if count.posts}}
                        <a href="/tag/{{slug}}" class="tag-item ar-tag-items">{{name}} ({{count.posts}})</a>
                    {{/if}}
                {{/foreach}}
            {{/get}}
        </div>

        {{!-- 使用主题 --}}
        <div class="ar-item-box">
            <div class="ar-item-title">
                其他项
            </div>
            <div class="ar-item-helper">
                <a href="/tag/ghost" class="ar-help-item-box">
                    <img src="http://hackbinimg.luokangyuan.com/diannao.png" alt="" srcset="">
                    <span class="color-black">安装博客</span>
                </a>
                <a class="ar-help-item-box">
                    <img src="http://hackbinimg.luokangyuan.com/share.png" alt="" srcset="">
                    <span class="color-black">占位专用</span>
                </a>
                <a href="https://github.com/mrbin1573/hackSeason" target="_blank" class="ar-help-item-box">
                    <img src="http://hackbinimg.luokangyuan.com/use-theme.png" alt="" srcset="">
                    <span class="color-black">使用主题</span>
                </a>
            </div>
        </div>

    </div>
</div>
<div class="page-load-status">
    <p class="infinite-scroll-request">
        <img class="status-img loading" src="http://hackbinimg.luokangyuan.com/20180731220789/logoblue.png" alt="" srcset="">
        加载中...
    </p>
    <p class="infinite-scroll-last">
        <img class="status-img" src="http://hackbinimg.luokangyuan.com/20180731220789/logoblue.png" alt="" srcset="">
        没有更多文章了
    </p>
    <p class="infinite-scroll-error">
        <img class="status-img" src="http://pcqg5j51d.bkt.clouddn.com/20180731220789/logoblue.png" alt="" srcset="">
        貌似出错了，点下首页或者刷新试试？
    </p>
</div>